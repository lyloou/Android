<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyloou.android">

    <!-- permission -->
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 外部存储写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".lou.activity.ListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- main -->


        <!-- activity -->
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".test.ActivitySingleFragmentActivityActivity" />
        <activity android:name=".activity.WebRootActivity" />

        <!-- fragment -->
        <activity android:name=".test.FragmentWebRootFragmentActivity" />

        <!-- view -->
        <activity android:name=".test.ViewClockViewActivity" />
        <activity android:name=".test.ViewCircleViewActivity" />
        <activity android:name=".test.ViewColorPickerActivity" />
        <activity android:name=".test.ViewHistogramActivity" />
        <activity android:name=".test.ViewNumActivity" />
        <activity android:name=".test.ViewSwitchActivity" />

        <!-- view -->
        <activity android:name=".test.AnimatorShowAndHideActivity" />

        <!-- drawable -->
        <activity android:name=".test.DrawableTbtnSelectorActivity" />
        <activity android:name=".test.AnimLoadingActivity"/>
    </application>

</manifest>