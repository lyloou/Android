<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_checked="true">
	    <layer-list >
	        <item>
	            <shape android:shape="rectangle">
	        		<corners android:radius="360dp"/>
	        		<solid android:color="@android:color/darker_gray"/>
	    		</shape>
	        </item>
	        <item android:left="4dp" android:right="36dp" android:top="4dp" android:bottom="4dp">
	            <shape android:shape="oval">
	                <corners android:radius="360dp"/>
	        		<solid android:color="#008800"/>
	        		<size android:width="24dp" android:height="24dp"/>
	    		</shape>
	        </item>
	    </layer-list>
	</item>
    <item android:state_checked="false" >
        <layer-list >
	        <item>
	            <shape android:shape="rectangle">
	        		<corners android:radius="360dp"/>
	        		<solid android:color="@android:color/darker_gray"/>
	    		</shape>
	        </item>
	        <item android:left="36dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
	            <shape android:shape="oval">
	                <corners android:radius="360dp"/>
	        		<solid android:color="#880000"/>
	        		<size android:width="32dp" android:height="32dp"/>
	    		</shape>
	        </item>
	    </layer-list>
    </item>
</selector>
